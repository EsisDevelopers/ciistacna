            ['Pago 35 S./',   35],
            ['Pago 40 S./',   40],
            ['Pago 45 S./',   45],
            ['Pago 50 S./',   50],
            ['Pago 55 S./',   55],
            ['Pago 60 S./',   60],
            ['Pago 65 S./',   65],
            ['Pago 70 S./',   70],
            ['Pago todo',    100]
        ]) %>
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
    <%= f.submit :class=>"btn" %>
    </div>
  </div>
<% end %>
