<%= form_for(@inscripcione, :html=>{:class=>"form-horizontal"}) do |f| %>
  <% if @inscripcione.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@inscripcione.errors.count, "error") %> prohibited this inscripcione from being saved:</h2>

      <ul>
      <% @inscripcione.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="control-group">
    <%= f.label :nombre, :class=>"control-label" %>
    <div class="controls">
    <%= f.text_field :nombre %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :correo, :class=>"control-label" %>
    <div class="controls">
    <%= f.text_field :correo %>
    </div>
  </div>
    <div class="control-group">
        <%= f.label :institucion, :class=>"control-label" %>
        <div class="controls">
            <%= f.text_field :institucion %>
        </div>
    </div>
    <div class="control-group">
      <%= f.label :departamento, :class=>"control-label" %>
      <div class="controls">
        <%= f.select(:departamento, [
                ['Tacna', 'tacna'],
                ['Arequipa', 'arequipa'],
                ['Moquegua', 'moquegua'],
                ['Puno', 'puno'],
                ['Ilo', 'ilo'],
                ['Lima', 'lima'],
                ['Argentina','argentina']
        ]) %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :tipo, :class=>"control-label" %>
      <div class="controls">
        <%= f.select(:tipo, [
                ['Estudiante 75 S/', 'estudiante'],
                ['Profesional 90 S/', 'profesional']
        ]) %>
      </div>
    </div>
  <div class="control-group">
    <%= f.label :saldo, :class=>"control-label" %>
